
<div class="d-flex flex-column" style="height:100vh;">
    <div class="d-flex align-items-center px-3 py-2 bg-dark text-white border-bottom">
        <input type="text" id="mapName" class="form-control map-name-input" placeholder="Map Name">
        <div class="btn-group ms-2">
            <button class="btn btn-outline-primary" id="newMapBtn" title="New"><i class="fas fa-file"></i></button>
            <button class="btn btn-outline-success" id="saveMapBtn" title="Save"><i class="fas fa-save"></i></button>
            <button class="btn btn-outline-secondary" id="loadMapBtn" title="Load"><i class="fas fa-folder-open"></i></button>
            <button class="btn btn-outline-danger" id="deleteMapBtn" title="Delete"><i class="fas fa-trash"></i></button>
        </div>
        <select id="mapList" class="form-select ms-2" style="width:auto;display:none;"></select>
    </div>
    <div class="map-grid-wrapper">
        <div id="mapGrid" class="map-grid"></div>
    </div>
    <div class="tile-palette" id="tilePalette">
        <!-- Tile buttons will be injected by JS -->
    </div>
</div>
<script src="/static/js/map_editor.js"></script>
<script src="https://cdn.jsdelivr.net/npm/konva@9.2.2/konva.min.js"></script>