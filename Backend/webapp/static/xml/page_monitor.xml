<style>
    /* CCTV Dashboard Styles */
    body {
        background: #1a1a1a;
        color: #ffffff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .dashboard-header {
        background: linear-gradient(135deg, #2c3e50, #34495e);
        padding: 15px 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    .dashboard-title {
        font-size: 1.8rem;
        font-weight: 600;
        margin: 0;
        color: #ecf0f1;
    }

    .connection-status {
        display: inline-block;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
        margin-left: 20px;
    }

    .connection-status.connected {
        background: #27ae60;
        color: white;
    }

    .connection-status.disconnected {
        background: #e74c3c;
        color: white;
    }

    .connection-status.error {
        background: #f39c12;
        color: white;
    }

    .cctv-grid {
        display: grid;
        gap: 15px;
        padding: 20px;
        min-height: calc(100vh - 80px);
    }

    /* Responsive Grid */
    .cctv-grid {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }

    @media (max-width: 768px) {
        .cctv-grid {
            grid-template-columns: 1fr;
            padding: 10px;
        }
        
        .dashboard-title {
            font-size: 1.4rem;
        }
        
        .connection-status {
            margin-left: 10px;
            padding: 6px 12px;
            font-size: 0.8rem;
        }
    }

    @media (min-width: 1200px) {
        .cctv-grid {
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        }
    }

    .cctv-feed {
        background: #2c3e50;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
    }

    .cctv-feed:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 35px rgba(0,0,0,0.4);
    }

    .cctv-header {
        background: linear-gradient(90deg, #34495e, #2c3e50);
        padding: 12px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid #3498db;
    }

    .agent-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #ecf0f1;
        margin: 0;
    }

    .agent-status {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .status-indicator {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        display: inline-block;
    }

    .status-indicator.active {
        background: #27ae60;
        box-shadow: 0 0 10px rgba(39, 174, 96, 0.5);
    }

    .status-indicator.detection {
        background: #e74c3c;
        box-shadow: 0 0 10px rgba(231, 76, 60, 0.5);
        animation: pulse 2s infinite;
    }

    .status-indicator.disconnected {
        background: #95a5a6;
    }

    @keyframes pulse {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }

    .status-text {
        font-size: 0.85rem;
        color: #bdc3c7;
        font-weight: 500;
    }

    .cctv-canvas-container {
        position: relative;
        background: #000;
        aspect-ratio: 16/9;
        overflow: hidden;
    }

    .cctv-canvas {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .cctv-overlay {
        position: absolute;
        top: 10px;
        right: 10px;
        background: rgba(0,0,0,0.7);
        color: white;
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .detection-count {
        position: absolute;
        top: 10px;
        left: 10px;
        background: rgba(231, 76, 60, 0.9);
        color: white;
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .no-feed {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        color: #7f8c8d;
        font-size: 1.1rem;
        background: #34495e;
    }

    .loading-spinner {
        border: 3px solid #34495e;
        border-top: 3px solid #3498db;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        animation: spin 1s linear infinite;
        margin: 20px auto;
    }

    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    /* Empty state */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #7f8c8d;
    }

    .empty-state h3 {
        font-size: 1.5rem;
        margin-bottom: 10px;
        color: #bdc3c7;
    }

    .empty-state p {
        font-size: 1rem;
        margin-bottom: 20px;
    }

    .refresh-btn {
        background: #3498db;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        cursor: pointer;
        font-size: 0.9rem;
        transition: background 0.3s ease;
    }

    .refresh-btn:hover {
        background: #2980b9;
    }
</style>
<div class="mh-100vh d-flex flex-column">
  <style>
    #page-content {
      padding: 0 !important;
    }
  </style>
  <div class="dashboard-header">
      <h1 class="dashboard-title">
          <i class="fas fa-video"></i> AUGV CCTV Dashboard 123
      </h1>
      <span id="connection-status" class="connection-status disconnected">
          <i class="fas fa-circle"></i> Disconnected
      </span>
  </div>

  <div class="cctv-grid" id="agents">
      <div class="empty-state">
          <h3><i class="fas fa-video-slash"></i> No Active Feeds</h3>
          <p>Waiting for AUGV agents to connect...</p>
          <button class="refresh-btn" onclick="location.reload()">
              <i class="fas fa-sync-alt"></i> Refresh
          </button>
      </div>
  </div>
</div>

<script src="/static/js/monitor.js"></script>