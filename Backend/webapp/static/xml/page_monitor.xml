<div class="d-flex flex-column" style="min-height: 100vh;">
  <div class="dashboard-header shadow p-3" style="background: linear-gradient(135deg, #2c3e50, #34495e);">
      <h1 class="dashboard-title mb-3 h4">
          <i class="fa fa-fw fa-video"></i> AUGV CCTV Dashboard
      </h1>
      <span id="connection-status" class="badge bg-danger">
          <i class="fa fa-fw fa-circle"></i> Disconnected
      </span>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-0" id="agents">
      <div class="empty-state h-100 w-100 text-center">
          <h3 class="mb-3"><i class="fas fa-video-slash text-danger"></i> No Active Feeds</h3>
          <p class="mb-3">Waiting for AUGV agents to connect...</p>
          <button class="btn btn-primary" onclick="location.reload()">
              <i class="fas fa-sync-alt"></i> Refresh
          </button>
      </div>
  </div>
</div>

<script src="/static/js/monitor.js"></script>