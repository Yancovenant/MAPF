<div class="container-fluid" style="min-height: 100vh;">
    <div class="row">
        <div class="header p-3 shadow" style="    background: linear-gradient(135deg, #2c3e50, #34495e);">
            <h1 class="mb-3 h4">Client Route Editor</h1>
            <p class="mb-0 small">Edit and send agent routes to Unity.</p>
        </div>
        <form id="routeForm" class="route-form my-3">
            <div class="row" id="agentFormContainer">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold" for="AUGV_1">AUGV_1</label>
                    <input type="text" class="form-control font-monospace" name="AUGV_1" id="AUGV_1" value='["Warehouse_1", "Warehouse_12", "Warehouse_7", "AUGV_1_Loadingspot"]'>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold" for="AUGV_2">AUGV_2</label>
                    <input type="text" class="form-control font-monospace" name="AUGV_2" id="AUGV_2" value='["Warehouse_5", "Warehouse_12", "Warehouse_8", "AUGV_2_Loadingspot"]'>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold" for="AUGV_3">AUGV_3</label>
                    <input type="text" class="form-control font-monospace" name="AUGV_3" id="AUGV_3" value='["Warehouse_3", "Warehouse_10", "AUGV_3_Loadingspot"]'>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold" for="AUGV_4">AUGV_4</label>
                    <input type="text" class="form-control font-monospace" name="AUGV_4" id="AUGV_4" value='["Warehouse_2", "Warehouse_11", "Warehouse_6", "AUGV_4_Loadingspot"]'>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold" for="AUGV_5">AUGV_5</label>
                    <input type="text" class="form-control font-monospace" name="AUGV_5" id="AUGV_5" value='["Warehouse_4", "AUGV_5_Loadingspot"]'>
                </div>
            </div>
            <button type="submit" class="btn mt-4 btn-primary">Send Routes to Unity</button>
        </form>
        <div id="routeStatus" class="mt-3"></div>
    </div>
</div>

<script src="/static/js/client.js"></script>